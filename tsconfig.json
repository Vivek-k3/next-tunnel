{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "noEmit": true,
    "isolatedModules": true,
    "module": "Preserve",

    /* Strictness */
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

  },
  "include": ["src"],
  "exclude": ["bin", "node_modules"]
}